<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/choice_wc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_wc_24"
        android:background="@drawable/bg_circle_choice_seleted"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_gas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_gas_station_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_ev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_ev_station_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_pharmacy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_pharmacy_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_park"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_park_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_fastfood"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_fastfood_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_cafe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_cafe_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_bookstore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_local_library_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/choice_movie"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_movie_24"
        android:background="@drawable/bg_circle_choice"
        android:padding="8dp"
        android:layout_margin="8dp"/>


</LinearLayout>